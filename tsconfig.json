{
  "compilerOptions": {
    /* Node ESM strict */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Target */
    "target": "ES2022",
    "lib": ["ES2022"],

    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Type safety */
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* ESM correctness */
    "verbatimModuleSyntax": true,
    "importsNotUsedAsValues": "error",

    /* Output quality */
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,

    /* Node */
    "esModuleInterop": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "tests"]
}
